<style type="text/css">
  .digg_pagination {
    font-family: 'rocket_scriptregular';
    font-weight: bold;
    font-size: 17px;
    cursor: default;
    color: #333;
    /* self-clearing method: */ }
    .digg_pagination a, .digg_pagination span, .digg_pagination em {
      padding: 0.2em 0.5em;
      display: block;
      float: left;
      margin-right: 1px; }
    .digg_pagination .disabled {
      color: #333;
      }
    .digg_pagination .current {
      font-style: normal;
      font-weight: bold;
      background: #333;
      color: white;
      border: 2px solid #ccc;
      border-color: #e3c5a9;
      }
    .digg_pagination a {
      background-color: <%= @background_colors.sample %>;
      text-decoration: none;
      color: #333;
      border: 2px solid #ccc;
      border-color: #e3c5a9;
    }
      .digg_pagination a:hover, .digg_pagination a:focus {
        color: #fff;
      }
    .digg_pagination .page_info {
      background: #2e6ab1;
      color: white;
      padding: 0.4em 0.6em;
      width: 22em;
      margin-bottom: 0.3em;
      text-align: center; }
      .digg_pagination .page_info b {
        color: #000033;
        background: #6aa6ed;
        padding: 0.1em 0.25em; }
    .digg_pagination:after {
      content: ".";
      display: block;
      height: 0;
      clear: both;
      visibility: hidden; }
    * html .digg_pagination {
      height: 1%; }
    *:first-child + html .digg_pagination {
      overflow: hidden; }
</style>

<br />
<br />
<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1 color-<%= (1..10).to_a.sample %>">
    <h1><%= place.name %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br /> 
  </div>
<% end %>

<div class="digg_pagination">
  <%= will_paginate @places %>  
</div>